@page
@model EntityFrameworkProviderSamples.Pages.SQLLite.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ZipCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Order) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TrackingId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TrackingId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TrackingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
